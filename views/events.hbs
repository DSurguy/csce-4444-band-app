{{#contentFor "page-title"}}Events{{/contentFor}}
{{#contentFor "page-constructor"}}EventsPage{{/contentFor}}
<div id="eventsPage" class="page">
    <div class="menu-button-container"></div>
    <h1>Songs</h1> 
    <div class="container">
        <button type="button" class="add-event btn btn-primary">
            <div class="fa fa-plus"></div> Add New Event
        </button>
    </div>
    <div class="container mt-2">
        <input type="text" class="search form-control" placeholder="search" />
    </div>
    <div class="container mt-1">
        <ul class="songs-list list-group"></ul>
    </div>
    <div class="event-modal">
	    <div data-event-id="" class="modal fade" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <h4 class="modal-title">Edit Event</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <input type="hidden" name="event-id" value="">
                            <div class="form-group">
                                <label for="name">Event Name</label>
                                <input class="form-control" type="text" name="name" placeholder="Enter name" />
                            </div>
                            <div class="form-group">
                                <label>Date</label>
                                <input type="date" name="date">
                            </div>
                            <div class="form-group">
                                <label for="time">Time</label>
                                <input type="time" name="time">
                            </div>
                            <div class="form-group">
                                <label for="location">Location</label>
                                <input class="form-control" type="text" name="location" placeholder="Enter location">
                                <div class="map"></div>
                            </div>
                            <div class="form-group">
                                <h5>Members</h5>
                                <div class="members"></div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button type="button" class="delete-song btn btn-danger">Delete Event</button>
                        <button type="button" class="save-song btn btn-info">Notify Members</button>
                        <button type="button" class="save-song btn btn-success">Save Event</button>
                    </div>
                </div>
            </div>
        </div>
	</div>
</div>