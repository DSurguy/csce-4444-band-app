{{#contentFor "page-title"}}Store{{/contentFor}}
{{#contentFor "page-constructor"}}StorePage{{/contentFor}}
<div id="storePage" class="page">
    <div class="menu-button-container"></div>
    <h1>Merchandise Store</h1>
    <div class="container">
        <button class="add-merch btn btn-primary">View Cart</button>
    </div>
    <div class="container">
        <div class="inventory card-group"></div>
    </div>
	<div class="item-modal">
	    <div data-item-id="" class="modal fade" role="dialog">
	        <div class="modal-dialog">
	            <div class="modal-content">
	                <div class="modal-header">
	                    <button type="button" class="close" data-dismiss="modal">&times;</button>
	                    <h4 class="modal-title"></h4>
	                </div>
	                <div class="modal-body">
		                <form class="form-inline" id="update-form">
	                    	<div class="item-quantities"></div>
	                    </form>
	                </div>
	                <div class="modal-footer">
	                    <button class="btn btn-primary pull-right" type="submit" name="submit" form="update-form">Add To Cart</button>
	                    <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Close</button>
	                </div>
	            </div>
	        </div>
	    </div>
	</div>
</div>