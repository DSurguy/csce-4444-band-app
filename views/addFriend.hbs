{{#contentFor "page-title"}}Add Friend{{/contentFor}}
{{#contentFor "page-constructor"}}AddFriendPage{{/contentFor}}
<div id="addFriendPage" class="page">
    <div class="menu-button-container"></div>
    <h1>search musicians</h1>
    <div class="container">
        <form class="search-user">
           <div class="input-group col-xs-2">
                <input type="text" class="form-control" placeholder="Username" name="searchString" id="search-users">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                </div>
            </div>
        </form>
    </div>
    <div class="container">
        <div class="friends"></div>
    </div>
    <div class="friend-modal">
    	    <div data-friend-id="" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title"></h4>
                        </div>
                        <div class="modal-body">
                            <div classs="friend-description"></div>
                        </div>
                        <div class="modal-footer">
                            <div class="dynamic-buttons"></div>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
    	</div>
</div>