{{#contentFor "page-title"}}Inventory{{/contentFor}}
{{#contentFor "page-constructor"}}InventoryPage{{/contentFor}}
<div id="inventoryPage" class="page">
    <div class="menu-button-container"></div>
    <h1>Merchandise Inventory</h1>
    <div class="container">
        <button class="add-merch btn btn-primary">Add Merchandise</button>
    </div>
    <div class="container">
        <div class="inventory card-group"></div>
    </div>
	<div class="item-modal">
	    <div data-item-id="" class="modal fade" role="dialog">
	        <div class="modal-dialog">
	            <div class="modal-content">
	                <div class="modal-header">
	                    <button type="button" class="close" data-dismiss="modal">&times;</button>
	                    <h4 class="modal-title"></h4>
	                </div>
	                <div class="modal-body">
		                <form id="update-form">
							<input class"form-control" form="update-form" type="hidden" name="itemId"/>
							<input class"form-control" form="update-form" type="hidden" name="type"/>
	                        <div class="form-group">
								<label for="name">Name</label>
								<input class="form-control" required type="text" name="name" placeholder="Name" />	
				            </div>
				            <div class="form-group">
	                    		<label for="description">Description</label>			        
				            	<input class="form-control" required type="text" name="description" placeholder="Description" />
				            </div>
				            <div class="form-group">
				            	<label for="color">Color</label>			        
					            <input class="form-control" required type="text" name="color" placeholder="Color" />
				            </div>
				            <div class="form-group">
					            <label for="merchImage">Update Image</label>			        
					            <input class="form-control" type="file" name="merchImage" placeholder="Change Image" /> 
					        </div>  
					        <div class="form-group">
					            <label for="price">Price</label>			             
					            <input class="form-control" required type="number" name="price" placeholder="Price" min="0" step=".01" />
					        </div>
	                    	<div class="item-inventory"></div>
	                    </form>
	                </div>
	                <div class="modal-footer">
	                    <div class="dynamic-buttons"></div>
	                    <button class="btn btn-primary pull-right" type="submit" name="submit" form="update-form">Update</button>
	                    <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Close</button>
	                </div>
	            </div>
	        </div>
	    </div>
	</div>
</div>